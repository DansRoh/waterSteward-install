.plan-page
  background-color #F2F4F7
  height 100vh
  .wapper-box
    padding 50px 30px
    .filter-box
      .top-btn
        display flex
        justify-content space-between
        .atbtn
          width 162px
          height 88px
          background-color #fff
          box-shadow: 0rpx 32rpx 40rpx 0rpx #E6EBF3;
          border-radius: 16rpx;
          .icon
            width 48px
            height 48px
            margin-bottom -8px
            margin-right 8px
        .atbtn-active
          background-color #17DA9C
          color #fff
      .bottom-picker
        background-color #fff
        width 688px
        height 88px
        color #828698
        box-shadow: 0rpx 32rpx 40rpx 0rpx #E6EBF3;
        border-radius: 16rpx;
        margin-top 26px
        padding 12px
        box-sizing border-box
        display flex
        align-items center
        justify-content space-between
        .picker-date-btn
          width: 144rpx;
          height: 56rpx;
          border-radius: 8rpx;
          border: 2rpx solid #CECFD0;
          align-items center
        .search-btn
          width 112px
          height 56px
          background-color #1FDA9F
          color #fff
          font-size 28px
          align-items center
          margin 0